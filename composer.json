{
    "name": "bakame/psr7-csv-factory",
    "type": "library",
    "description" : "a factory to return league csv object from PSR-7 StreamInterface",
    "keywords": ["csv", "import", "export", "read", "write", "psr-7"],
    "license": "MIT",
    "homepage" : "https://github.com/bakame-php/psr7-csv-factory",
    "authors": [
        {
            "name" : "Ignace Nyamagana Butera",
            "email" : "nyamsprod@gmail.com",
            "homepage" : "https://github.com/nyamsprod/"
        }
    ],
    "require": {
        "league/csv": ">=8.2.1",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.1",
        "friendsofphp/php-cs-fixer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Bakame\\Psr7\\Factory\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BakameTest\\Psr7\\Factory\\": "tests"
        },
        "files": ["src/functions_include.php"]
    },
    "scripts": {
        "test": "phpunit --coverage-text; php-cs-fixer fix -v --diff --dry-run --allow-risky=yes;",
        "phpunit": "phpunit --coverage-text",
        "phpcs": "php-cs-fixer fix -v --diff --dry-run --allow-risky=yes;"
	}
}
